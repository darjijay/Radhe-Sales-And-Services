@model IEnumerable<RadheSalesAndServices.Web.Models.Sale>
@{
    ViewData["Title"] = "Sales";
}

<div class="action-toolbar">
    <h1 class="h3 mb-0">Sales</h1>
    <a asp-action="Create" class="btn btn-primary">Record Sale</a>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped align-middle">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Customer</th>
                        <th>Total Amount</th>
                        <th>Items</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var sale in Model)
                    {
                        <tr>
                            <td>@sale.SaleDate.ToLocalTime().ToString("dd MMM yyyy")</td>
                            <td>@sale.Customer?.Name</td>
                            <td>â‚¹@sale.TotalAmount.ToString("N0")</td>
                            <td>@sale.Items.Count</td>
                            <td class="text-end">
                                <a asp-action="Details" asp-route-id="@sale.Id" class="btn btn-sm btn-outline-secondary">Details</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
