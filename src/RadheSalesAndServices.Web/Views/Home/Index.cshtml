@model RadheSalesAndServices.Web.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="d-flex flex-column gap-4">
    <div class="row g-3">
        <div class="col-12 col-sm-6 col-lg-3">
            <div class="card card-metric h-100">
                <div class="card-body">
                    <span class="metric-label">Products</span>
                    <span class="metric-value">@Model.TotalProducts</span>
                    <span class="text-muted">Total items currently in stock</span>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-lg-3">
            <div class="card card-metric h-100">
                <div class="card-body">
                    <span class="metric-label">Low Stock</span>
                    <span class="metric-value">@Model.LowStockProducts</span>
                    <span class="text-muted">Products that need replenishment</span>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-lg-3">
            <div class="card card-metric h-100">
                <div class="card-body">
                    <span class="metric-label">Customers</span>
                    <span class="metric-value">@Model.TotalCustomers</span>
                    <span class="text-muted">Registered buyers</span>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-lg-3">
            <div class="card card-metric h-100">
                <div class="card-body">
                    <span class="metric-label">Monthly Sales</span>
                    <span class="metric-value">₹@Model.MonthlySales.ToString("N0")</span>
                    <span class="text-muted">Sales booked this month</span>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-12 col-lg-6">
            <div class="card h-100 shadow-sm">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Low Stock Alerts</h5>
                    <a asp-controller="Products" asp-action="Index" class="btn btn-sm btn-outline-primary">Manage Products</a>
                </div>
                <div class="card-body">
                    @if (!Model.TopProducts.Any())
                    {
                        <p class="text-muted mb-0">All products are adequately stocked.</p>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table align-middle">
                                <thead>
                                    <tr>
                                        <th>Product</th>
                                        <th>Stock</th>
                                        <th>Reorder Level</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var product in Model.TopProducts)
                                    {
                                        <tr>
                                            <td>@product.Name</td>
                                            <td>
                                                <span class="badge @((product.StockQuantity <= product.ReorderLevel) ? "badge-low-stock" : "bg-success")">
                                                    @product.StockQuantity
                                                </span>
                                            </td>
                                            <td>@product.ReorderLevel</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="col-12 col-lg-6">
            <div class="card h-100 shadow-sm">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Recent Sales</h5>
                    <a asp-controller="Sales" asp-action="Create" class="btn btn-sm btn-primary">New Sale</a>
                </div>
                <div class="card-body">
                    @if (!Model.RecentSales.Any())
                    {
                        <p class="text-muted mb-0">No sales recorded yet.</p>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table align-middle">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Customer</th>
                                        <th>Total</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var sale in Model.RecentSales)
                                    {
                                        <tr>
                                            <td>@sale.SaleDate.ToLocalTime().ToString("dd MMM yyyy")</td>
                                            <td>@sale.Customer?.Name</td>
                                            <td>₹@sale.TotalAmount.ToString("N0")</td>
                                            <td class="text-end">
                                                <a asp-controller="Sales" asp-action="Details" asp-route-id="@sale.Id" class="btn btn-sm btn-outline-secondary">Details</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
