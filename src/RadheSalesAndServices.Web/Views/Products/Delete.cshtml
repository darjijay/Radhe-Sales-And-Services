@model RadheSalesAndServices.Web.Models.Product
@{
    ViewData["Title"] = "Delete Product";
}

<h1 class="h4 mb-3">Delete Product</h1>
<p class="text-muted">Are you sure you want to delete this product? This action cannot be undone.</p>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>
            <dt class="col-sm-3">SKU</dt>
            <dd class="col-sm-9">@Model.Sku</dd>
            <dt class="col-sm-3">Category</dt>
            <dd class="col-sm-9">@Model.Category?.Name</dd>
            <dt class="col-sm-3">Stock</dt>
            <dd class="col-sm-9">@Model.StockQuantity</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post" class="d-flex gap-2">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
</form>
